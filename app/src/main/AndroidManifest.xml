<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yawar.memo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.read_phone_state" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatMemo"
        tools:replace="android:theme">
        <activity android:name=".views.ContactNumberActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".views.SearchActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".views.RegisterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".views.UserDetailsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".views.SettingsActivity" />
        <activity
            android:name=".views.BasicActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".views.ProfileActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".views.VerificationActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".views.ConversationActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".views.SplashScreen"
            android:theme="@style/AppTheme" />
    </application>

</manifest>